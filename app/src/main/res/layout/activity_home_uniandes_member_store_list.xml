<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".activitiesHomeUniandesMember.activityHomeUniandesMemberStoreList.ActivityHomeUniandesMemberStoreList"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/back_image_view"
        android:src="@mipmap/icon_back"
        android:contentDescription="@string/icon_back"

        android:layout_gravity="start"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="30dp"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:text="Store List"
        android:fontFamily="@font/sen_bold"
        android:textColor="@color/text_highlight"
        android:textSize="20sp"

        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Get to know all our affiliated stores"
        android:fontFamily="@font/sen_regular"
        android:textColor="@color/text"
        android:textSize="16sp"

        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/search_edit_text"
        android:autofillHints="search_edit_text"
        android:hint="Search stores"
        android:inputType="textNoSuggestions"
        android:fontFamily="@font/sen_regular"
        android:textSize="16sp"
        android:textColor="@color/text"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@drawable/auth_text_field_background"

        android:layout_gravity="center"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:text="Categories"
        android:fontFamily="@font/sen_regular"
        android:textColor="@color/text"
        android:textSize="16sp"

        android:layout_marginStart="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:scrollbars="none">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/categories_bakeries"
                android:text="Bakeries"
                android:fontFamily="@font/sen_regular"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="@drawable/home_categories_scroll_button_background"

                android:layout_marginEnd="10dp"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:onClick="onCategoryClicked" />

            <Button
                android:id="@+id/categories_bar"
                android:text="Bar"
                android:fontFamily="@font/sen_regular"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="@drawable/home_categories_scroll_button_background"

                android:layout_marginEnd="10dp"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:onClick="onCategoryClicked" />

            <Button
                android:id="@+id/categories_coffee"
                android:text="Coffee"
                android:fontFamily="@font/sen_regular"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="@drawable/home_categories_scroll_button_background"

                android:layout_marginEnd="10dp"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:onClick="onCategoryClicked" />

            <Button
                android:id="@+id/categories_electronic"
                android:text="Electronic"
                android:fontFamily="@font/sen_regular"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="@drawable/home_categories_scroll_button_background"

                android:layout_marginEnd="10dp"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:onClick="onCategoryClicked" />

            <Button
                android:id="@+id/categories_pizzeria"
                android:text="Pizzeria"
                android:fontFamily="@font/sen_regular"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="@drawable/home_categories_scroll_button_background"

                android:layout_marginEnd="10dp"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:onClick="onCategoryClicked" />

            <Button
                android:id="@+id/categories_restaurant"
                android:text="Restaurant"
                android:fontFamily="@font/sen_regular"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="@drawable/home_categories_scroll_button_background"

                android:layout_marginEnd="10dp"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:onClick="onCategoryClicked" />

            <Button
                android:id="@+id/categories_stationery"
                android:text="Stationery"
                android:fontFamily="@font/sen_regular"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="@drawable/home_categories_scroll_button_background"

                android:layout_marginEnd="10dp"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:onClick="onCategoryClicked" />

            <Button
                android:id="@+id/categories_other"
                android:text="Other"
                android:fontFamily="@font/sen_regular"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="@drawable/home_categories_scroll_button_background"

                android:layout_marginEnd="10dp"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:onClick="onCategoryClicked" />

        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:text="Stores"
        android:fontFamily="@font/sen_regular"
        android:textColor="@color/text"
        android:textSize="16sp"

        android:layout_marginStart="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loading_animation"
        app:lottie_rawRes="@raw/loading"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"

        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/store_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingStart="35dp"
        android:paddingEnd="35dp"
        android:paddingBottom="35dp" />

</LinearLayout>