            android:spinnerMode="dropdown"
            android:padding="10dp"
            android:background="@drawable/auth_spinner_background" />

        <TextView
            android:layout_width="3dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
