<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/advertisement_image_view"
        android:src="@mipmap/icon_image_landscape"
        android:contentDescription="@string/icon_image"
        android:foreground="@drawable/advertisement_image_foreground"
        android:scaleType="centerCrop"

        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_gravity="center_vertical" />

    <View
        android:visibility="gone"
        android:id="@+id/overlay_view"
        android:background="#80000000"
        android:foreground="@drawable/advertisement_image_foreground"

        android:layout_width="match_parent"
        android:layout_height="130dp" />

    <TextView
        android:visibility="gone"
        android:id="@+id/closed_text_view"
        android:fontFamily="@font/sen_semibold"
        android:text="@string/store_closed"
        android:textColor="@android:color/white"
        android:textSize="16sp"

        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</FrameLayout>
