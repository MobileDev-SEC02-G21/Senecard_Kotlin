<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activityQRCodeUniandesMember.ActivityQRCodeUniandesMember">

    <ImageButton
        android:id="@+id/options_image_view2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/icon_options"
        android:src="@mipmap/icon_back"
        android:background="?attr/selectableItemBackground"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="¡This is your QR Code!"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/options_image_view2"
    android:layout_marginTop="16dp" /> <!-- Margen superior para separación -->

    <ImageView
        android:id="@+id/ivCodigoQR"
        android:layout_width="232dp"
        android:layout_height="286dp"
        android:layout_marginTop="16dp"
    android:background="@drawable/border_combined"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/textView5"
    app:layout_constraintHorizontal_bias="0.497" />

</androidx.constraintlayout.widget.ConstraintLayout>
