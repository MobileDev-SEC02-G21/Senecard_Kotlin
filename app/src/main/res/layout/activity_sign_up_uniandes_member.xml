<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    tools:context=".activitiesSignUp.activitySignUp.ActivitySignUp"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/back_image_view"
        android:src="@mipmap/icon_back"
        android:contentDescription="@string/icon_back"

        android:layout_gravity="start"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="10dp"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:text="@string/sing_up_uniandes_member_uniandes_member"
        android:fontFamily="@font/sen_bold"
        android:textColor="@color/text_highlight"
        android:textSize="30sp"

        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/sign_up_uniandes_member_enter_the_information_to_get_started"
        android:fontFamily="@font/sen_regular"
        android:textColor="@color/text"
        android:textSize="16sp"

        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp" />

    <TextView
        android:labelFor="@+id/name_edit_text"
        android:text="@string/sign_up_uniandes_member_name"
        android:fontFamily="@font/sen_regular"
        android:textColor="@color/text"
        android:textSize="14sp"

        android:layout_gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="35dp" />

    <EditText
        android:id="@+id/name_edit_text"
        android:autofillHints="sign_up_uniandes_member_name"
        android:inputType="textNoSuggestions"
        android:fontFamily="@font/sen_regular"
        android:textColor="@color/text"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:background="@drawable/auth_text_field_background"

        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:labelFor="@+id/email_edit_text"
        android:text="@string/sign_up_uniandes_member_email"
        android:fontFamily="@font/sen_regular"
        android:textColor="@color/text"
        android:textSize="14sp"

        android:layout_gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="35dp" />

    <EditText
        android:id="@+id/email_edit_text"
        android:autofillHints="sign_up_uniandes_member_email"
        android:inputType="textEmailAddress"
        android:fontFamily="@font/sen_regular"
        android:textColor="@color/text"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:background="@drawable/auth_text_field_background"

        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:labelFor="@+id/phone_edit_text"
        android:text="@string/sign_up_uniandes_member_phone"
        android:fontFamily="@font/sen_regular"
        android:textColor="@color/text"
        android:textSize="14sp"

        android:layout_gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="35dp" />

    <EditText
        android:id="@+id/phone_edit_text"
        android:autofillHints="sign_up_uniandes_member_phone"
        android:inputType="number"
        android:fontFamily="@font/sen_regular"
        android:textColor="@color/text"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:background="@drawable/auth_text_field_background"

        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        tools:ignore="TextFields" />

    <TextView
        android:labelFor="@+id/password_edit_text"
        android:text="@string/sign_up_uniandes_member_password"
        android:fontFamily="@font/sen_regular"
        android:textColor="@color/text"
        android:textSize="14sp"

        android:layout_gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="35dp" />

    <EditText
        android:id="@+id/password_edit_text"
        android:autofillHints="sign_up_uniandes_member_password"
        android:inputType="textPassword"
        android:fontFamily="@font/sen_regular"
        android:textColor="@color/text"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:background="@drawable/auth_text_field_background"

        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:labelFor="@+id/confirm_password_edit_text"
        android:text="@string/sign_up_uniandes_member_confirm_password"
        android:fontFamily="@font/sen_regular"
        android:textColor="@color/text"
        android:textSize="14sp"

        android:layout_gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="35dp" />

    <EditText
        android:id="@+id/confirm_password_edit_text"
        android:autofillHints="sign_up_uniandes_member_confirm_password"
        android:inputType="textPassword"
        android:fontFamily="@font/sen_regular"
        android:textColor="@color/text"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:background="@drawable/auth_text_field_background"

        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="50dp"
        tools:ignore="LabelFor,TextFields" />

    <Button
        android:id="@+id/register_button"
        android:text="@string/sign_up_uniandes_member_register"
        android:fontFamily="@font/sen_bold"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:background="@drawable/auth_button_background"

        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        tools:ignore="TextContrastCheck" />

</LinearLayout>
