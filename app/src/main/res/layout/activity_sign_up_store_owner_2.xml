<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    tools:context=".activitiesSignUp.activitySignUpStoreOwner2.ActivitySignUpStoreOwner2"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/back_image_view"
        android:src="@mipmap/icon_back"
        android:contentDescription="@string/icon_back"

        android:layout_gravity="start"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:text="@string/sign_up_store_owner_2_store_owner"
        android:fontFamily="@font/sen_bold"
        android:textColor="@color/text_highlight"
        android:textSize="30sp"

        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/sign_up_store_owner_2_enter_the_information_to_get_started"
        android:fontFamily="@font/sen_regular"
        android:textColor="@color/text"
        android:textSize="16sp"

        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp" />

    <TextView
        android:labelFor="@+id/store_name_edit_text"
        android:text="@string/sign_up_store_owner_2_store_name"
        android:fontFamily="@font/sen_regular"
        android:textColor="@color/text"
        android:textSize="14sp"

        android:layout_gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="40dp" />

    <EditText
        android:id="@+id/store_name_edit_text"
        android:autofillHints="sign_up_store_owner_2_store_name"
        android:inputType="textNoSuggestions"
        android:fontFamily="@font/sen_regular"
        android:textColor="@color/text"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:background="@drawable/auth_text_field_background"

        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        tools:ignore="LabelFor,TextFields" />

    <TextView
        android:labelFor="@+id/store_address_edit_text"
        android:text="@string/sign_up_store_owner_2_store_address"
        android:fontFamily="@font/sen_regular"
        android:textColor="@color/text"
        android:textSize="14sp"

        android:layout_gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="40dp" />

    <EditText
        android:id="@+id/store_address_edit_text"
        android:autofillHints="sign_up_store_owner_2_store_address"
        android:inputType="textNoSuggestions"
        android:fontFamily="@font/sen_regular"
        android:textColor="@color/text"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:background="@drawable/auth_text_field_background"

        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        tools:ignore="LabelFor,TextFields" />

    <TextView
        android:labelFor="@+id/store_category_spinner"
        android:text="@string/sign_up_store_owner_2_store_category"
        android:fontFamily="@font/sen_regular"
        android:textColor="@color/text"
        android:textSize="14sp"

        android:layout_gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="40dp" />

    <Spinner
        android:id="@+id/store_category_spinner"
        android:autofillHints="sign_up_store_owner_2_store_address"
        android:inputType="textNoSuggestions"
        android:fontFamily="@font/sen_regular"
        android:textColor="@color/text"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:entries="@array/categories"
        android:spinnerMode="dropdown"
        android:background="@drawable/auth_text_field_background"

        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        tools:ignore="LabelFor,TextFields" />

    <TextView
        android:labelFor="@+id/store_image_image_view"
        android:text="@string/sign_up_store_owner_2_store_image"
        android:fontFamily="@font/sen_regular"
        android:textColor="@color/text"
        android:textSize="14sp"

        android:layout_gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="40dp" />

    <ImageView
        android:id="@+id/store_image_image_view"
        android:src="@mipmap/icon_image_landscape"
        android:contentDescription="@string/icon_image"
        android:foreground="@drawable/auth_image_foreground"
        android:scaleType="centerCrop"

        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="200dp"
        tools:ignore="ImageContrastCheck" />

    <Button
        android:id="@+id/next_button"
        android:text="@string/sign_up_store_owner_3_next"
        android:fontFamily="@font/sen_bold"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:background="@drawable/auth_button_background"

        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        tools:ignore="TextContrastCheck" />

</LinearLayout>
